{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/models/**",
          "src/routes/**",
          "src/pages/**",
          "src/js/**",
          "src/css/**",
          "assets/**",
          ".env"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ]
}